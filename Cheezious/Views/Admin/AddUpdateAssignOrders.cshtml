@using Cheezious.Models
@model AssignOrder

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/Roles.css" rel="stylesheet" />

<section id="login" class="container">
    <form asp-action="AddUpdateAssignOrders" asp-controller="Admin" method="post">
        <h4 class="text-center text-uppercase">Assign Orders</h4>

        <div class="input-group">
            <label>Products</label>
            <select asp-for="OrderId" asp-items="ViewBag.Orders">
                <option>Select Products</option>
            </select>
        </div>
        <div class="input-group">
            <label>Riders</label>
            <select asp-for="RiderId" asp-items="ViewBag.Riders">
                <option>Select Riders</option>

            </select>
        </div>
        

        <div class="d-flex justify-content-center">
            <button type="submit">Save</button>
        </div>
    </form>
</section>


<script src="~/js/project-proposal.js"></script>

