@using Cheezious.Models
@model Roles



@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/roles.css" rel="stylesheet" />



<section id="login" class="container">
    <form asp-action="AddUpdateRoles" asp-controller="Admin" method="post">
        <h4 class="text-center text-uppercase">Add Roles</h4>
        <div class="input-group">
            <label for="name">Name</label>
            <input type="text" id="name" placeholder="Enter Name" asp-for="Name">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit">Save</button>
        </div>
    </form>
</section>



