@using Cheezious.Models
@model Order

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/Roles.css" rel="stylesheet" />

<section id="login" class="container">
    <form asp-action="AddUpdateOrders" asp-controller="Buyer" method="post" enctype="multipart/form-data">
        <h4 class="text-center text-uppercase">Add Users</h4>
       
        <div class="input-group">
            <label>Products</label>
            <select  asp-for="ProductId" asp-items="ViewBag.Products">
                <option>Select Products</option>

            </select>
        </div>
        <div class="input-group">
            <label>Buyers</label>
            <select asp-for="BuyerId" asp-items="ViewBag.Buyers">
                <option>Select Buyers</option>

            </select>
        </div>
        <div class="input-group">
            <label>OrderStatuses</label>
            <select asp-for="OrderStatusId" asp-items="ViewBag.OrderStatuses">
                <option>Select OrderStatuses</option>

            </select>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit">Save</button>
        </div>
    </form>
</section>


<script src="~/js/project-proposal.js"></script>

